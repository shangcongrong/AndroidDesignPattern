<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yangxin.androiddesignpattern">

    <application
        android:name="com.yangxin.app.YxApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.yangxin.androidbasic.service.MyServiceActivity"
            android:label="@string/title_activity_my_service"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <service android:name="com.yangxin.androidbasic.service.MyStartService">
        </service>
        <service android:name="com.yangxin.androidbasic.service.MyBindService">
        </service>

        <activity android:name="com.yangxin.androidbasic.msg.MsgHandlerActivity">
        </activity>
    </application>

</manifest>